#!/usr/bin/python3

import sys
from modules.powered_g import *
from modules.giti_interactive import giti_interactive
from modules.update import giti_update, giti_version, giti_update_necessity, is_git, giti_remove
from modules.argsParse import parser as p
from modules.argsParse import special as s

script_path = os.path.dirname(os.path.realpath(__file__))

commands_dict = {
    "all": giti_all,
    "make": giti_makefile,
    "igit": giti_ignore,
    "del": giti_del,
    "header": giti_header
}


def main():
    giti_update_necessity()
    is_git()
    if len(sys.argv) == 1:
        giti_interactive()
        exit()
    special_flags = s.parse_known_args()[0]
    if True in vars(special_flags).values():
        print("Found special flag")
        print(special_flags)
        exit()
    args = p.parse_args()
    print(args)


if __name__ == "__main__":
    main()
